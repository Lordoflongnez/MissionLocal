{% extends 'base.html.twig' %}

{% block title %}Intranet !
{% endblock %}

{% block stylesheets %}
    <link href="/css/login.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="box">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="inpu">
                <h1 class="h3 mb-3 font-weight-normal">CONNEXION !</h1>

                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Identifiant" required>

                <input class="form-control" id="inputPassword" name="password" placeholder="Mot de passe" required type="password">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                        
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}

            <button class="btn btn-lg btn-primary sub" type="submit">
                Connexion !
            </button>
        </form>
    </div>
{% endblock %}
